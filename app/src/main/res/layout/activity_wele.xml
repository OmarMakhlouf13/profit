<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".wele">

    <TextView
        android:id="@+id/text1"
        android:layout_width="343dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:text="Calculate the amount of protein required for your body"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/texth"
        android:layout_width="297dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:text="Enter your height and weight to calculate the protein you need" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Weight" />

        <EditText
            android:id="@+id/edikg"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="number" />


        <TextView
            android:id="@+id/textkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Kg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textH"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Hight" />

        <EditText
            android:id="@+id/edicm"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textcm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Cm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/butcalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Calculaten"
            android:onClick="claculate"/>

        <Button
            android:id="@+id/butlas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="last calculaten"
            android:onClick="load"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textres"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/butsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Save"
        android:onClick="save"/>

</LinearLayout>